{{> header}}

<div class="container">
    <h2 class="heading">Add New Business</h2>
    <form action="/businesses" method="post" class="business-form">
        <div class="form-group">
            <label for="name" class="form-label">Business Name:</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Business Name" required>
        </div>
        <div class="form-group">
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" name="description" class="form-control" placeholder="Description"
                required></textarea>
        </div>
        <!-- Include additional fields as needed -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create Business</button>
        </div>
    </form>
</div>

{{> footer}}