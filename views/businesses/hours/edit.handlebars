{{> header}}

<div class="container">
    <h2 class="heading">Edit Business</h2>

    {{#if errors}}
    <div class="alert alert-danger">
        {{#each errors}}
        <p>{{this.msg}}</p>
        {{/each}}
    </div>
    {{/if}}

    <form action="/businesses/{{business.id}}?_method=PUT" method="POST" class="form">
        <div class="form-group">
            <label for="name">Business Name</label>
            <input type="text" id="name" name="name" value="{{business.name}}" required class="form-control">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" required
                class="form-control">{{business.description}}</textarea>
        </div>

        <div class="form-group">
            <label for="hours">Business Hours</label>
            <input type="text" id="hours" name="hours" value="{{business.hours}}" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Update Business</button>
    </form>
</div>

{{> footer}}